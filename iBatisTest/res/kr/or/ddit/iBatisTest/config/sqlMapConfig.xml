<?xml version="1.0" encoding="UTF-8"?>

<!-- 이 xml문서는 iBatis에 대한 환경을 설정하는 문서 -->

		
<!DOCTYPE sqlMapConfig PUBLIC "-//iBATIS.com//DTD SQL Map Config 2.0//EN"
    "http://www.ibatis.com/dtd/sql-map-config-2.dtd">

<sqlMapConfig>
		
		<!-- DB와 연결하는 정보를 properties파일에 설정해 놓고 이 properties파일의 내용을 읽어올 수 있도록 한다.-->
		<properties resource="kr/or/ddit/iBatisTest/config/dbinfo/properties"/>
		
		<!-- 각각의 sqlMap파일의 네임스페이스와 id속성값을 연결해서 실행할 쿼리문을 선택하도록 설정한다. -->
		
		<settings useStatementNamespace = "true"/>
		
		<!-- 
		쿼리문에 사용할 VO객체는 패키지 이름을 포함한 전체 이름을 사용해야 한다. 
		그런데 그렇게되면 이름이 너무길어질 수가 있기 때문에 전체 이름을 대신할 alias를 설정할 수 있다.
		형식) <typeAlias alias = "alias명" type="클래스의 전체이름">
		-->
		
		<!-- class를 표현하기위해서는 .을 경로를 위해서는 /를 사용함 -->
		<typeAlias alias="lprodVo" type="kr.or.ddit.vo.LprodVo"/>
		
		<!-- DB와의 연결을 처리하는 부분 -->
		<transactionManager type="JDBC">
			<dataSource type ="SIMPLE">
				<property name="JDBC.Driver" value="${driver}">
				<property name="JDBC.ConnectionURL" value="${url}">
				<property name="JDBC.Username" value="${user}">
				<property name="JDBC.Password" value="${pass}">
			</dataSource>
		</transactionManager>
		
		
		
		<!-- 실행할 SQL문 등록하기 -->
		<sqlMap resource="kr/or/ddit/ibatis/mapping/lprodTest.xml">
		
		
		
		<!-- 실행할 쿼리문은 XML문서로 따로 만든후 그 XML문서를 아래와 같이 등록하면된다.
		형식) <sqlMap resource="경로명/파일명.xml"/> -->
		
		
		
</sqlMapConfig>
		
		
		